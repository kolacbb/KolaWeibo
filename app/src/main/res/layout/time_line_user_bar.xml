<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/user_img"
        android:src="@mipmap/ic_launcher"
        android:layout_width="48dp"
        android:layout_height="48dp" />
    <TextView
        android:textColor="@color/textBlack"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:layout_toRightOf="@id/user_img"
        android:layout_toEndOf="@id/user_img"
        android:id="@+id/user_name"
        android:text="攻城狮Kola"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="4 hours ago"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_below="@id/user_name"
        android:layout_toEndOf="@id/user_img"
        android:id="@+id/wb_create_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/user_img" />
    <TextView
        android:id="@+id/wb_source"
        android:text="From iPhone 7"
        android:layout_marginLeft="8dp"
        android:layout_below="@id/user_name"
        android:layout_toRightOf="@id/wb_create_time"
        android:layout_toEndOf="@id/wb_create_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>