<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/darker_gray"
        android:orientation="horizontal">

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/tab_bar_feed"
            android:layout_width="0dp"
            android:padding="16dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_receipt_black_24px" />

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/tab_bar_discover"
            android:layout_width="0dp"
            android:padding="16dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_explore_black_24px" />

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/tab_bar_notification"
            android:layout_width="0dp"
            android:padding="16dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_notifications_black_24px" />

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/tab_bar_message"
            android:layout_width="0dp"
            android:padding="16dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_textsms_black_36px" />

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/tab_bar_more"
            android:layout_width="0dp"
            android:padding="16dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_more_black_24px" />

    </LinearLayout>
</RelativeLayout>